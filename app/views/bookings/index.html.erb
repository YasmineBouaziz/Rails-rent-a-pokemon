<div class="container-fluid bg-light p-0">
<div class="text-center p-4">
  <h2 class="m-0">All my Pokémons</h2>
</div>
<div class="text-center">
  <h3>MY FUTURE POKÉMONS</h3>
</div>
<div class="wrapper-dashboard">
  <div class="cards">
    <% @bookings.each do |booking| %>
        <div class="card">
        <%= link_to booking do %>
      <% booking.start_date %>
        <% booking.end_date %>
          <div class='product-body'>
            <h2 class="text-decoration-none"><%= booking.pokemon.name.titleize %></h2>
            <p>Total price: £<strong><%= booking.pokemon.price %> </strong></p>
          </div>
          <% end %>
          </div>
        <% end %>
      </div>
</div>
