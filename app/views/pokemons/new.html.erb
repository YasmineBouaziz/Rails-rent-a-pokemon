<h1>Add your new pokemon details here</h1>

<div class="container">
  <div class="row">
    <div class="add-pokemon-card col">
      <%= simple_form_for(@pokemon) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name, label: "Pokemon name", input_html: { placeholder: 'Charizard' } %>
          <%= f.input :description, input_html: { placeholder: 'Spits fire that is hot enough to melt boulders. Known to cause forest fires unintentionally.' } %>
          <%= f.input :photo_url, input_html: { placeholder: 'https://static.pokemonpets.com/images/monsters-images-300-300/6-Charizard.webp' } %>
          <%= f.input :price, input_html: { placeholder: 'Â£55' } %>
        </div>

        <div class="form-actions">
          <button type="button" class="btn btn-dark"><%= f.button :submit %></button>
        </div>
      <% end %>
    </div>
    <button type="button" class="btn btn-light"><%= link_to 'Back', pokemons_path %></button>
  </div>
</div>
